@import "pages/assets/colorui/main.wxss";
@import "pages/assets/colorui/icon.wxss";
@import "pages/assets/colorui/animation.wxss";

page{
  --theme: #1380ff;
  --yellow: #ffa807;
  --gradualTheme: linear-gradient(45deg, #1380ff, #1cbbb4);
}

/** 扩展 */
.y-radius {
  border-radius: 12rpx;
}
.bg-color{
  background-color: var(--background)
}
.bg-transparent{
  background-color: transparent;
}
.text-theme, .line-theme, .lines-theme {
  color: var(--theme)
}
.bg-theme{
  background-color: var(--theme);
}
.cu-btn.bg-theme{
  color: #fff;
}
switch.theme[checked] .wx-switch-input, checkbox.theme[checked] .wx-checkbox-input,
radio.theme[checked] .wx-radio-input {
  border-color: var(--theme) !important;
}

switch.theme[checked] .wx-switch-input.wx-switch-input-checked,
checkbox.theme[checked] .wx-checkbox-input, radio.theme[checked] .wx-radio-input {
  background-color: var(--theme) !important;
  color: #fff !important;
}
.cu-custom .cu-bar .border-custom {
  position: relative;
  background: var(--white);
  border-radius: 1000rpx;
  border:1px solid #ddd;
  height: 30px;
}

.app-icon{
  margin-top: 10rpx;
  text-align: center;
}
.app-icon image{
  width: 56rpx!important;
  height: 56rpx!important;
}

/* yxz-bar */
.yxz-tips{
  width: 100%;
  border-radius: 8rpx;
  min-height: 60rpx;
  background: #f7cca2;
  color: #fff;
  padding: 0 12rpx;
  line-height: 60rpx;
}

/*toast start*/
.wxapp-toast-mask{
  opacity: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 888;
}
.wxapp-toast-content-box {
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 999;
}
.wxapp-toast-content {
  padding: 16rpx 26rpx;
  letter-spacing:2rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 20rpx;
}
.wxapp-toast-content-text {
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
}
/*toast end*/

.ad{
  padding: 10px;
}
ad{
  border-radius: 8px!important;
}

/* 弹窗 */

.img_yzm{
  float: right;
  margin: 4rpx;
  width: 200rpx;
  height: 76rpx
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
  overflow: hidden;
  z-index: 2;
  color: #fff;
  transition: all 0.4s;
}

.modal-dialog {
  transition: all 0.5s;
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 100;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 28rpx;
}
.input_focus{
  top: 30%;
}

.modal-title {
  padding-top: 50rpx; 
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
   padding: 50rpx 32rpx; 
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.modal-content .input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

.input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}

/** 微信分享按钮 */
.wx-share{
  width: 100%;
  height: 100%;
  background: none;
  padding: 0;
}
.wx-share::after{
  opacity: 0
}

/** 表格 */
.yxz-cel{
  padding: 0 20rpx
}
.yxz-cel .title{
  text-align: center;
  font-size: 32rpx;
  color: #848b91;
  padding: 30rpx 0;
}
.yxz-cel .tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
  border-bottom: 1px solid #f2f4f7;
}
.yxz-cel .tr:last-child{
  border-color: transparent;
}
.yxz-cel .bg-w{
  background: #f5f5f5;
  border-radius: 8rpx;
  border-color: transparent;
}
.yxz-cel .bg-g{
  background: #f6f6f6;
}
.yxz-cel .tr .th {
  width: 20%;
  justify-content: center;
  background: f9f9f9;
  color: #999;
  display: flex;
  height: 3rem;
  font-size: 28rpx;
  align-items: center;
}
.yxz-cel .tr .td {
  display: block;
  width: 20%;
  color: #333;
  justify-content: center;
  text-align: center;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.yxz-cel .tr .th.b,
.yxz-cel .tr .td.b{
  width: 30%;
}
.yxz-cel .tr .th.s,
.yxz-cel .tr .td.s{
  width: 10%;
}

/** 表格 end */

@keyframes leftIn{
	from {
		transform: translateX(-200rpx);
    opacity: 0;
	}
	to {
		transform: translateX(0);
    opacity: 1;
	}
}
@keyframes rightIn{
	from {
		transform: translateX(0);
    opacity: 0;
	}
	to {
		transform: translateX(200rpx);
    opacity: 1;
	}
}
@keyframes upIn{
	from {
		transform: translateY(80rpx);
    opacity: 0;
	}
	to {
		transform: translateY(0);
    opacity: 1;
	}
}
@keyframes downIn{
	from {
		transform: translateY(-80rpx);
    opacity: 0;
	}
	to {
		transform: translateY(0);
    opacity: 1;
	}
}
@keyframes fade{
  from {
    opacity: 0;
	}
	to {
    opacity: 1;
	}
}
/* 透明按钮 */
.tr-btn{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: transparent;
  z-index: 1;
}
.tr-btn::after{
  border: none
}

/* 分类列表 */
.y-typelist .cardTitle{
  color: #fff;
  padding: 90rpx 60rpx;
  font-size: 40rpx;
  font-weight: 300;
  transform: skew(-10deg, 0deg);
  position: relative;
  text-shadow: 0px 0px 6rpx rgba(0,0,0,0.3)
}

.y-typelist .cardTitle::before{
  content: "";
  position: absolute;
  width: 60rpx;
  height: 6rpx;
  border-radius: 20rpx;
  background-color: #fff;
  display: block;
  top: 60rpx;
  left: 50rpx;  
  transform: skew(10deg, 0deg);
}
.y-typelist .cardTitle::after{
  content: "";
  position: absolute;
  width: 140rpx;
  border-radius: 6rpx;
  height: 24rpx;
  background-color: #fff;
  display: block;
  bottom: 76rpx;
  left: 90rpx;  
  transform: skew(10deg, 0deg);
  opacity: 0.1;
}
.y-typelist .icon{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

/* 分类列表结束 */